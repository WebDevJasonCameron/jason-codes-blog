---
// COMPs
import MainHead from './MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

// STYLEs
import '../styles/global.css';

// PROPs
const {
	title = "Jason's Blog",
	description = "This is where I try to contemplate and put into words the things I've coded.",
	image,
	frontmatter,
	robots,
} = Astro.props;
---

<html lang='en'>
	<MainHead
		{title}
		{description}
		{image}
		{frontmatter}
		{robots}
	/>
	<Nav />
	<body>
		<main>
			<div class="container">
				<slot>Default Text</slot>
			</div>
		</main>
		<Footer />
	</body>
</html>
