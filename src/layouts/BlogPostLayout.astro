---
// COMPs
import MainLayout from "./MainLayout.astro";
import PostHeader from "../components/PostHeader.astro";
import CategoryCloud from "../components/CategoryCloud.astro";
import RelatedPosts from "../components/RelatedPosts.astro";

// PROPs
const { frontmatter } = Astro.props;

// UTILs
import { formatBlogPosts } from "../js/utils";

// VARs
const { title, description, date, category, author, image } = frontmatter;
const formatParams = {
    filterOutDrafts: true,
    filterOutFuturePosts: true,
    sortByDate: false,
    limit: undefined,
}

const allPosts = await Astro.glob("../pages/posts/**/*.md")
const formattedPosts = formatBlogPosts(allPosts, formatParams)
const relatedPosts = formattedPosts.filter((post) => post.frontmatter.category === category && post.frontmatter.title !== title).slice(0,3);

console.log(relatedPosts)
---

<MainLayout title={title} {description}>
    <header>
        <PostHeader
            {title} {description} {date} {category} {author} {image}
            />
        <div class="post-content">
            <div class="content">
                <slot />
            </div>
            <div class="sidebar">
                <aside class="container" aria-label="Blog Categories">
                    <h2 class="h3">Blog Categories</h2>
                    <CategoryCloud />
                </aside>
                {
                    relatedPosts.length > 0 && (
                                <aside class="container" aria-label="Related posts">
                                    <h2 class="h3">Related Posts</h2>
                                    <RelatedPosts {relatedPosts} />
                                </aside>
                    )
                }
            </div>
        </div>
    </header>
</MainLayout>
