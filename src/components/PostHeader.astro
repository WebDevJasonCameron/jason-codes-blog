---
// LIB
import { Image } from "astro:assets"

import {formatDate, slugify} from "../js/utils";

const { category, title, author, date, image } = Astro.props;
---

<div class="container">
    <small>
        <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
    </small>
    <h1 class="h2">
        {title}
    </h1>
    <p>by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {formatDate(date)}</p>
</div>
<Image
        src={image.src}
        alt={image.alt}
        width="700"
        height="400"
        format="avif"
        fit="cover"
        quality={80}
        aspectRation="5:2"
        class="hero-image"
/>