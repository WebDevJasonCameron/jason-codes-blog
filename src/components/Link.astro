---
interface Props {
    text: string;
    href: string;
    style: "primary" | "second";
    icon?: {
        name: string;
        side: "left" | "right"
    };
    isFilled?: boolean;
    borderVisible?: boolean;
    classes?: string;
}

const {
    text,
    href,
    style,
    isFilled = true,
    borderVisible = false,
    classes,
    ...rest
} = Astro.props as Props;
---

<a href={href}
   class:list={[
    "link",
    classes,
    style,
    { filled: isFilled, bordered: borderVisible }
]}>

</a>